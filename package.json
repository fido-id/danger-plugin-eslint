{
  "name": "danger-plugin-eslint",
  "description": "Eslint your code with Danger",
  "author": {
    "name": "Dan Palmer",
    "email": "dan@danpalmer.me"
  },
  "contributors": [
    {
      "name": "Marco Cotrufo",
      "email": "marco@fido.id"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fido-id/danger-plugin-eslint.git"
  },
  "bugs": {
    "url": "https://github.com/fido-id/danger-plugin-eslint/issues"
  },
  "homepage": "https://github.com/fido-id/danger-plugin-eslint#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "eslint"
  ],
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.2.1",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/parser": "^5.6.0",
    "commitizen": "^4.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.4.0",
    "lint-staged": "^12.1.0",
    "prettier": "^2.5.0",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.1.0",
    "tslint": "^6.1.0",
    "typescript": "^4.5.0",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^0.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint:fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx|js|json)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "danger": "^10.7.1",
    "eslint": "^8.2.0"
  }
}
